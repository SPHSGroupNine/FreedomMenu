<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    tools:context="com.example.andy.iteration2.homeCategories">

    <Button
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/homesalad"
        android:height="250dp"
        android:width="300dp"
        android:background="@drawable/caesarsalad"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/homecoldcuts"
        android:height="300dp"
        android:width="350dp"
        android:background="@drawable/chickensaladsandwich"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/homehotpaninis"
        android:layout_alignStart="@+id/homesoupssides"
        android:layout_alignLeft="@+id/homesoupssides"
        android:layout_alignBottom="@+id/homehotpaninis" />

    <Button
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/homehotpaninis"
        android:height="300dp"
        android:width="350dp"
        android:background="@drawable/governor"
        android:layout_alignTop="@+id/homedesserts"
        android:layout_alignStart="@+id/homebeverages"
        android:layout_alignLeft="@+id/homebeverages"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/homedesserts"
        android:width="250dp"
        android:height="300dp"
        android:background="@drawable/cookies"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/homebeverages"
        android:width="350dp"
        android:height="300dp"
        android:background="@drawable/fountain_soda"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/homesoupssides"
        android:height="300dp"
        android:width="350dp"
        android:background="@drawable/soups_and_sides"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Salad"
        android:id="@+id/textView4"
        android:layout_alignWithParentIfMissing="false"
        android:textSize="50sp"
        android:layout_below="@+id/homesalad"
        android:layout_alignEnd="@+id/homesalad"
        android:layout_alignRight="@+id/homesalad"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Beverages"
        android:id="@+id/textView5"
        android:layout_alignWithParentIfMissing="false"
        android:textSize="50sp"
        android:layout_below="@+id/homebeverages"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Soups and Sides"
        android:id="@+id/textView6"
        android:layout_alignWithParentIfMissing="false"
        android:textSize="33sp"
        android:layout_below="@+id/homesoupssides"
        android:layout_alignLeft="@+id/homesoupssides"
        android:layout_alignStart="@+id/homesoupssides" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="  Desserts"
        android:id="@+id/textView7"
        android:textSize="50sp"
        android:layout_below="@+id/homedesserts"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hot Paninis"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:textSize="50sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cold Cuts"
        android:id="@+id/textView9"
        android:textSize="50sp"
        android:layout_below="@+id/homecoldcuts"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Menu Categories"
        android:id="@+id/textView"
        android:textSize="40sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
